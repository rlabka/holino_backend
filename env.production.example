# ======================
# Production Environment Variables
# ======================
# WICHTIG: Kopiere diese Datei zu .env und f√ºlle alle Werte aus!

# ======================
# Server Configuration
# ======================
NODE_ENV=production
PORT=3001
API_VERSION=v1

# ======================
# Database Configuration
# ======================
POSTGRES_DB=holino_db
POSTGRES_USER=holino_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!
POSTGRES_PORT=5432
DATABASE_URL=postgresql://holino_user:CHANGE_THIS_SECURE_PASSWORD_123!@postgres:5432/holino_db?schema=public&connection_limit=20&pool_timeout=30
DB_LOG_LEVEL=warn

# ======================
# JWT Configuration
# ======================
# WICHTIG: Generiere sichere Secrets mit: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ======================
# CORS Configuration
# ======================
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# ======================
# File Upload Configuration
# ======================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=info
LOG_FORMAT=combined

# ======================
# Application URLs
# ======================
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# ======================
# Email Configuration (Optional)
# ======================
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USER=your-email@your-domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@your-domain.com

# ======================
# Feature Flags
# ======================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_FILE_UPLOAD=true
